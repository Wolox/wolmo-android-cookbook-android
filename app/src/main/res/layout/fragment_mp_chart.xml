            android:layout_marginStart="@dimen/chart_padding_default"
            android:layout_marginTop="@dimen/chart_padding_default"
            android:layout_marginEnd="@dimen/chart_padding_default"
            android:layout_marginBottom="@dimen/chart_padding_default"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vChartList" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
