<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_recipe_picker"
        android:scaleType="centerCrop"
        android:alpha="0.05"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide between recipes and tap the one you want to learn"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_big"
        android:layout_marginHorizontal="@dimen/spacing_big"
        style="@style/Text.LargeExtra.Black"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vRecipePickerSelectionViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/recipe_picker_selection_padding"
        android:paddingRight="@dimen/recipe_picker_selection_padding" />

    <LinearLayout
        android:id="@+id/vRecioePickerContactLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|right"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium_extra">

        <ImageView
            android:layout_width="@dimen/recipe_picker_question_mark_size"
            android:layout_height="@dimen/recipe_picker_question_mark_size"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:src="@drawable/ic_question_mark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_picker_contact"
            style="@style/Text.MediumExtra.Grey"/>

    </LinearLayout>

</FrameLayout>