<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nonCooperativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/coroutines_examples_cooperative_cancellation_non_cooperative"
            app:layout_constraintEnd_toStartOf="@id/cooperativeButton"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <Button
            android:id="@+id/cooperativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/coroutines_examples_cooperative_cancellation_cooperative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/nonCooperativeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
