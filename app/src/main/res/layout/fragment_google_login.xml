<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/vLoginGoogleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vLoginUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_more"
            android:gravity="top|center_horizontal"
            android:textSize="@dimen/font_medium_extra" />

        <TextView
            android:id="@+id/vLoginUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_more"
            android:gravity="top|center_horizontal"
            android:textSize="@dimen/font_medium_extra" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/vLoginUserPhoto"
            android:layout_width="@dimen/google_login_user_photo_width"
            android:layout_height="@dimen/google_login_user_photo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_medium_more"
            fresco:viewAspectRatio="1" />

        <Button
            android:id="@+id/vLogoutGoogleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium_more"
            android:enabled="false"
            android:gravity="top|center_horizontal"
            android:text="@string/google_login_logout"
            android:textSize="@dimen/font_medium_extra" />

    </LinearLayout>
</layout>