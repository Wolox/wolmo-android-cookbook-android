<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_navigation3"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <EditText
        android:id="@+id/fragment3_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/spacing_large_extra"
        android:layout_marginRight="@dimen/spacing_large_extra"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/fragment_navigation3_to4_button"
        android:layout_width="@dimen/navigation_button_width"
        android:layout_height="@dimen/navigation_button_height"
        android:layout_gravity="center"
        android:text="@string/navigation_go_to_4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>
